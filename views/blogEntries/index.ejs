<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"> -->
    <title>Blogster!</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <!-- <script type="text/javascript" src="/main.js" ></script>
    <script type="text/javascript" src="/routes/blogEntries.js" ></script> -->
</head>

<body>    
    <div class="box">

        <section class="one">
            <div class="sectionContent">
                <h1>Welcome to Blogster!</h1>
                <p class="menuOptions">
                    <a href="/blogEntries/create" class="buttons">Create an Entry</a>
                </p>
                <p class="menuOptions">
                    <a href="/blogEntries/read" class="buttons">Read your Entries</a>
                </p>
                <p class="menuOptions">
                    <a href="/blogEntries/edit" class="buttons">Edit an Entry</a>
                </p>
                <p class="menuOptions">
                    <a href="/blogEntries/delete" class="buttons">Delete an Entry</a>
                </p>
            </div>
        </section>

        <section class="two">
            <% blogEntries.forEach(entry => { %>
                <div class="entryContainer">
                    <div class="entry">
                        <h2 class="blogTitle">
                            <%= entry.title %>
                        </h2>
                        <div class="entrySubsection">
                        <h4 class="blogDate">
                            <%= entry.date %>
                        </h4>
                        </div>
                        <div class="entrySubsection">
                        <h5 class="blogBody">
                            <%= entry.body %>
                        </h5>
                        </div>
                    </div>
                </div>
            <% }); %>
        </section>
    
    </div>
</body>
</html>